builtin emulate -L zsh ${=${options[xtrace]:#off}:+-o xtrace}
builtin setopt typeset_silent

case "$OSTYPE" in
  android*)
    typeset OS='android'
    ;;
  darwin*)
    typeset OS='darwin'
    ;;
  linux*)
    typeset OS='linux'
    ;;
  freebsd*)
    typeset OS='freebsd'
    ;;
  netbsd*)
    typeset OS='netbsd'
    ;;
  openbsd*)
    typeset OS='openbsd'
    ;;
  sunos*)
    typeset OS='solaris'
    ;;
  msys* | cygwin* | mingw*)
    typeset OS='windows'
    ;;
  nt | win*)
    typeset OS='windows'
    ;;
  *)
    typeset OS='unknown'
    ;;
esac
